<%= content_for(:page_title, "Sign in") %>
<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8"  >
    <div class="card bg-secondary shadow border-0">
      <%= render "devise/shared/oauth" %> 

      <div class="card-body px-lg-5 py-lg-5">
        <div class="text-center text-muted mb-4">
          <small>Or sign up with credentials</small>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form') do |form| %>
          <%= render "devise/shared/error_messages", resource: resource %> 
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
              </div>
              <%= form.text_field :login, required: true, class: 'form-control', placeholder: 'Username/Email'%>
            </div>
          </div>


          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
              </div>
              <%= form.password_field :password, autocomplete: "new-password", placeholder: "Password", class: 'form-control' %>
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= form.check_box :remember_me %>
              <%= form.label :remember_me %>
            </div>
          <% end %>
         <div class="text-center">
            <%= form.submit "Sign in", class: 'btn btn-lg btn-primary btn-block'%>
          </div>
        <% end %>
      </div>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>