<%= content_for(:page_title, "Sign up") %>
<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8">
    <div class="card bg-secondary shadow border-0">
      <%= render "devise/shared/oauth" %> 

      <div class="card-body px-lg-5 py-lg-5">
        <div class="text-center text-muted mb-4">
          <small>Or sign up with credentials</small>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: 'form') do |form| %>
          <%= render "devise/shared/error_messages", resource: resource %> 
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-user-3"></i></span>
              </div>
              <%= form.text_field :first_name, autofocus: true, required: true, class: 'form-control', placeholder: 'First name'%>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
              </div>
              <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last name'%>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
              </div>
              <%= form.text_field :username, required: true, autocomplete: "username", class: 'form-control', placeholder: 'Username'%>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
              </div>
              <%= form.email_field :email, autofocus: true, required: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address'%>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
              </div>
              <%= form.password_field :password, autocomplete: "new-password", placeholder: "New password", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
              </div>
              <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: 'form-control'%>
            </div>
          </div>

          <div class="text-center">
            <%= form.submit "Sign up", class: 'btn btn-lg btn-primary btn-block'%>
          </div>
        <% end %>
      </div>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>